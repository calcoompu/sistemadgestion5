{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üö´ Sin Debug - Solo Ejecutar",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "${workspaceFolder}"
            ],
            "env": {
                "XDEBUG_MODE": "off"
            }
        },
        {
            "name": "üêõ Debug PHP (SOLO SI NECESARIO)",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/xampp/htdocs/sistemadgestion5": "${workspaceFolder}"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ]
        }
    ]
}
